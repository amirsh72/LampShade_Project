<form  method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" name="Name" asp-for="CreateProduct.Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="CreateProduct.Name" class="error"></span>
                </div>
                <div class="form-group">
                    <label for="Code" class="control-label">کد</label>
                    <input type="text" class="form-control" name="Code" asp-for="CreateProduct.Code"  >
                    <span asp-validation-for="CreateProduct.Code" class="error"></span>
                </div>
                
                
                 <div class="form-group">
                        <label class="sr-only" for="CategoryId" asp-for="CreateProduct.CategoryId"></label>
                        <select class="form-control" name="CategoryId" asp-for="CreateProduct.CategoryId" asp-items="Model.productcategories" >
                            <option value="0">گروه محصول </option>
                        </select>
                    </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" name="Slug"  asp-for="CreateProduct.Slug" id="Slug">
                    <span asp-validation-for="CreateProduct.Slug" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="Picture" class="control-label">عکس</label>
                    <input type="file" class="form-control" name="Picture" asp-for="CreateProduct.Picture" accept="image/*">
                    <span asp-validation-for="CreateProduct.Picture" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" name="PictureAlt" asp-for="CreateProduct.PictureAlt">
                    <span asp-validation-for="CreateProduct.PictureAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="PictureTitle" class="control-label">عنوان</label>
                    <input type="text" class="form-control" name="PictureTitle"  asp-for="CreateProduct.PictureTitle">
                    <span asp-validation-for="CreateProduct.PictureTitle" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" name="Description" asp-for="CreateProduct.Description" onchange="fillField('Description', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="CreateProduct.Description" class="error"></span>
                </div>
                 <div class="form-group no-margin">
                    <label for="ShortDescription" class="control-label">توضیحات کوتاه</label>
                    <textarea class="form-control autogrow" name="ShortDescription" asp-for="CreateProduct.ShortDescription" 
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="CreateProduct.ShortDescription" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="KeyWords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" name="KeyWords" asp-for="CreateProduct.KeyWords">
                    <span asp-validation-for="CreateProduct.KeyWords" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" name="MetaDescription" asp-for="CreateProduct.MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="CreateProduct.MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>
