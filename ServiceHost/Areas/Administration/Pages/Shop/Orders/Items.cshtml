@page
@using _0_Framework.Application
@model ServiceHost.Areas.Administration.Pages.Shop.Orders.ItemsModel
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">آیتم های سفارش</h4>
</div>

<div class="modal-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>محصول</th>
                <th>تعداد</th>
                <th>قیمت واحد</th>
                <th>درصد تخفیف</th>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Prodouct</td>
                    <td>@item.Count</td>
                    <td>@item.UnitPrice.ToMoney()</td>
                    <td>@item.DiscountRate %</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
        <a asp-page="./Index" type="button" class="btn btn-default waves-effect" >بستن</a>
</div>
