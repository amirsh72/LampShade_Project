<form method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Fullname" class="control-label">نام</label>
                    <input type="text" class="form-control" name="Fullname" asp-for="editAccount.Fullname" onchange="makeSlug('Name', 'Slug')">
                    
                    <span asp-validation-for="editAccount.Fullname" class="error"></span>
                </div>
                <div class="form-group">
                    <label for="Code" class="control-label">نام کاربری</label>
                    <input type="text" class="form-control" name="Username" asp-for="editAccount.Username">
                    <span asp-validation-for="editAccount.Username" class="error"></span>
                </div>


                <div class="form-group">
                    <label class="sr-only" for="RoleId" asp-for="editAccount.RoleId"></label>
                    <select class="form-control" name="RoleId" asp-for="editAccount.RoleId" asp-items="Model.Roles">
                        <option value="0">نقش </option>
                       
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Mobile" class="control-label">موبایل</label>
                    <input type="text" class="form-control" name="Mobile" asp-for="editAccount.Mobile" >

                    <span asp-validation-for="editAccount.Mobile" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="ProfilePhoto" class="control-label">عکس</label>
                    <input type="file" class="form-control" name="ProfilePhoto" asp-for="editAccount.ProfilePhoto" accept="image/*">
                    <span asp-validation-for="editAccount.ProfilePhoto" class="error"></span>
                </div>
            </div>
        </div>
        
    </div>
    <input type="hidden" class="form-control" name="Id" asp-for="editAccount.Id" value="@Model.editAccount.Id">
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>