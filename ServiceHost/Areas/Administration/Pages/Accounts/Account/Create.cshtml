<form  method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Fullname" class="control-label">نام</label>
                    <input type="text" class="form-control" name="Fullname" asp-for="CreateAccount.Fullname" >
                    <span asp-validation-for="CreateAccount.Fullname" class="error"></span>
                </div>
                <div class="form-group">
                    <label for="Code" class="control-label">نام کاربری</label>
                    <input type="text" class="form-control" name="Username" asp-for="CreateAccount.Username"  >
                    <span asp-validation-for="CreateAccount.Username" class="error"></span>
                </div>
                
                
                 <div class="form-group">
                        <label class="sr-only" for="RoleId" asp-for="CreateAccount.RoleId"></label>
                        <select class="form-control" name="RoleId" asp-for="CreateAccount.RoleId" asp-items="Model.Roles" >
                            <option value="0">نقش  </option>
                        </select>
                         
                        
                    </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Mobile" class="control-label">موبایل</label>
                    <input type="text" class="form-control" name="Mobile"  asp-for="CreateAccount.Mobile" id="Mobile">
                    <span asp-validation-for="CreateAccount.Mobile" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="ProfilePhoto" class="control-label">عکس پروفایل</label>
                    <input type="file" class="form-control" name="ProfilePhoto" asp-for="CreateAccount.ProfilePhoto" accept="image/*">
                    <span asp-validation-for="CreateAccount.ProfilePhoto" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Password" class="control-label">پسورد</label>
                    <input type="text" class="form-control" name="Password" asp-for="CreateAccount.Password">
                    <span asp-validation-for="CreateAccount.Password" class="error"></span>
                </div>
            </div>
            
        </div>
       
      
       
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>
