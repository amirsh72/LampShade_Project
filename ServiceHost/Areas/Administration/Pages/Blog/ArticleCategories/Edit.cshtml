<form  method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="@Model.editArticleCategory.Name" onchange="makeSlug('Name', 'Slug')">
                   @* <span asp-validation-for="Name" class="error"></span>*@
                </div>
            </div><div class="col-md-6">
                <div class="form-group">
                    <label for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="editArticleCategory.Slug" id="Slug">
                   
                    @*<span asp-validation-for="Slug" class="error"></span>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="Picture" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="editArticleCategory.Picture" accept="image/*">
                   @* <span asp-validation-for="Picture" class="error"></span>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="editArticleCategory.PictureAlt">
                    @*<span asp-validation-for="PictureAlt" class="error"></span>*@
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="PictureTitle" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="editArticleCategory.PictureTitle">
                    @*<span asp-validation-for="PictureTitle" class="error"></span>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="editArticleCategory.Description" onchange="fillField('Description', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    @*<span asp-validation-for="Description" class="error"></span>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="KeyWords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="editArticleCategory.Keywords">
                    @*<span asp-validation-for="KeyWords" class="error"></span>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="editArticleCategory.MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    @*<span asp-validation-for="MetaDescription" class="error"></span>*@
                </div>
            </div>
        </div>
    </div>
     <input type="text"  asp-for="editArticleCategory.Id" >
     
      
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>